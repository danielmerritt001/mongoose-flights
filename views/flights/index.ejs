<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Flight Number</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Depart Date</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach((flight) => { %>
      <tr>
        <td><%= flight.flightNo %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.departs %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include("../partials/footer") %>